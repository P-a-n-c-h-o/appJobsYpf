<main class="contenedor">
    <form action="/tareas/nueva" method="POST" class="default-form" enctype="multipart/form-data">
        <h3>Información General</h3>

        <div class="campo">
            <label>Planta</label>
            <input type="text" name="planta" placeholder="Ej: Calderas II">
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa Ejecutora">
        </div>
       <!--modificando ubucacion por prioridad-->
        <div class="campo">
            <label>Prioridad</label>
            <select name="prioridad">
                    <option value="" disabled selected>-- Selecciona --</option>
                    <option value="0"> 0 </option>
                    <option value="1"> 1 </option>
                    <option value="2"> 2 </option>
                    <option value="3"> 3 </option>
              </select>
        </div>
        
        <div class="campo">
            <label>Fecha Inicio</label>
            <input type="date" name="inicio" placeholder="dd/mm/aa">
        </div>

        <div class="campo">
            <label>Finalización</label>
            <input type="date" name="fin" placeholder="dd/mm/aa">
        </div>

        <h3>Descripción de la Tarea</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <div class="campo" action="/tareas/{{tarea.url}}">
            <label>Archivos</label>
            <input type="file" name="imagen1">
        </div>

        <h3>Técnica y Recursos a Realizar</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>


    </form>
</main>