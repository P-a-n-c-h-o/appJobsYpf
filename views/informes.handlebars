<main class="lista-informes">
    <h2>Lista de Informes</h2
    {{#if informes.length}} <!-- si existe un informe-->
        {{#each informes}}
            <div class="informe">
                <div class="caja1">
                    <p class="etiqueta">Nombre:</p>
                    <p class="nombre">{{nombre}}</p>
                </div>
                <div class="caja2">
                    <p class="etiqueta">E-mail</p>
                    <p class="nombre">{{email}}</p>
                </div>
                <div class="caja3">
                    <a href="/uploads/cv/{{cv}}" class="btn btn-verde">
                    
                        Ver Informes
                    </a>
                </div>
            </div>

        {{/each}}
    {{else}}
        <p>No hay informes a√∫n</p>

    {{/if}}
</main>