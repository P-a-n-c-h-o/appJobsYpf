<main class="lista-vacantes"> 
    <h2>Lista de Vacantes</h2>

    {{#if vacantes.length}}<!--revisamos si existe algo aqui--> 
        {{#each vacantes}}
            <div class="vacante">
                <div class="caja">
                    <h3>{{empresa}}</h3><!--Con esto enviamos estos valores de la DB-->
                    <p class="puesto">{{titulo}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Ubicación</p>
                    <p class="nombre">{{ubicacion}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Contrato</p>
                    <p class="nombre contrato">{{contrato}}</p>
                </div>
                <div class="caja centrar-vertical">
                    <a href="/vacantes/{{url}}" class="btn btn-verde">Más Info</a>
                </div>
            </div> <!--.vacante-->
        {{/each}}
    {{else}}
        <p>No hay Vacantes</p><!--de esta forma podemos revisar si existe algo o no-->
    {{/if}}
</main>